doctype html
html
    head
        meta(charset="UTF-8")
        block title
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
        link(rel="stylesheet", href="/static/css/layout.css")
        block head
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
    body
        nav(class="navbar navbar-expand-md bg-dark navbar-dark")
            a(class="navbar-brand", href="/") Some Shop
            button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#collapsibleNavbar")
                span(class="navbar-toggler-icon")
            div(class="collapse navbar-collapse", id="collapsibleNavbar")
                ul(class="navbar-nav ml-auto", id="nav-buttons")
                    li(class="nav-item")
                        div(class="btn-group" id="btn-group-user")
                            button(class="btn btn-outline-light dropdown-toggle", data-toggle="dropdown")
                                i(class="fa fa-user-circle")
                            div(class="dropdown-menu dropdown-menu-right")
                                a(class="dropdown-item", href="/cart" id="btn-profile")
                                    i(class="fa fa-user", aria-hidden="true") Profile
                                a(class="dropdown-item", href="/cart" id="btn-cart")
                                    i(class="fa fa-shopping-cart", aria-hidden="true")
                    block nav_buttons
        block body
        block footer
